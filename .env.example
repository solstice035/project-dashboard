# Project Dashboard Environment Variables
# Copy this file to .env and fill in your values
# Environment variables take precedence over config.yaml for secrets

# =============================================================================
# API Tokens (Required for integrations)
# =============================================================================

# Todoist API token - get from: https://todoist.com/app/settings/integrations/developer
DASHBOARD_TODOIST_TOKEN=

# Linear API key - get from: https://linear.app/settings/api
DASHBOARD_LINEAR_API_KEY=

# =============================================================================
# Notification Services
# =============================================================================

# Telegram bot token - create bot via @BotFather
DASHBOARD_TELEGRAM_BOT_TOKEN=

# Slack webhook URL - create from: https://api.slack.com/messaging/webhooks
DASHBOARD_SLACK_WEBHOOK_URL=

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL database name (default: nick)
DASHBOARD_DB_NAME=nick

# PostgreSQL host (default: localhost)
DASHBOARD_DB_HOST=localhost

# =============================================================================
# Email Accounts (Optional - can also use config.yaml)
# =============================================================================
# For multiple accounts, increment the index (0, 1, 2, ...)
# App passwords for Gmail: Google Account > Security > 2FA > App passwords

# First email account
DASHBOARD_EMAIL_0_ADDRESS=
DASHBOARD_EMAIL_0_APP_PASSWORD=
DASHBOARD_EMAIL_0_NAME=Main
DASHBOARD_EMAIL_0_PRIORITY=high

